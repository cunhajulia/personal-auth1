        <div class="col-sm-6">
          <h3>Daily Water Tracker</h3>
          <ul class="waterIntake">
          <% for(var i=0; i<water.length; i++) {%>
            <li class="message">
              <span><%= water[i].date %></span>
              <span><%= water[i].time %></span>
              <span><%= water[i].ounces %></span>
              <span><button class= "fa fa-trash" type="button">Delete</button></span>
               <span><i class="fa fa-trash"></i></span> </li>
          <% } %>
          </ul> 

 <h2>How many ounces of water did you drink today?</h2>
        <% if (user.local.email) { %>
          <form action="/water" method="POST">
            <input type="date" name="date">
            <input type="time" name="time">
            <select name="ounces">
              <option value="4">4 ounces</option>
              <option value="6">6 ounces</option>
              <option value="8">8 ounces</option>
           </select>
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>

</div>

<script src="main.js"></script>

</body>
